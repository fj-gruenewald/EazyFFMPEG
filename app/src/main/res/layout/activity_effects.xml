<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_effects">

    <!-- Main Layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Activity Header -->
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view0"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardElevation="10dp"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        card_view:cardCornerRadius="8dp">

        <!-- Activity Header Layout -->
            <LinearLayout
                android:background="@drawable/menuitem_red"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_menu_effects"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Effects"
                    android:textColor="#FFF"
                    android:textSize="16sp"/>
            </LinearLayout>
    </androidx.cardview.widget.CardView>

        <!-- Card 1 -->
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_videoInput"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardElevation="10dp"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            card_view:cardCornerRadius="4dp">

            <!-- Card 1 Layout -->
            <LinearLayout
                android:background="@color/cardbackground"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Card 1 Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <!-- Card 1 Header Icon -->
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_input"/>

                    <!-- Card 1 Header Text -->
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Input Video File"
                        android:textSize="16sp"/>

                </LinearLayout>

                <!-- Card 1 Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txtFilePath"
                        android:layout_width="270dp"
                        android:layout_gravity="center"
                        android:layout_height="50dp"
                        android:textSize="10dp"/>


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btnFileDialog"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_folder"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card 2 -->
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view3"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardElevation="10dp"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            card_view:cardCornerRadius="4dp">

            <!-- Card 2 Layout -->
            <LinearLayout
                android:background="@color/cardbackground"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Card 2 Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <!-- Card 2 Header Icon -->
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_magic_wand"/>

                    <!-- Card 2 Header Text -->
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:text="Choose Effect"
                        android:textSize="16sp"/>

                </LinearLayout>

                <!-- Card 2 Header Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <Spinner
                        android:id="@+id/effectsSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card 3 -->
        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="top"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="10dp"
            card_view:cardPreventCornerOverlap="true">

            <!-- Card 3 Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardbackground"
                android:orientation="vertical">

                <!-- Card 3 Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <!-- Card 3 Header Icon -->
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_info" />

                    <!-- Card 3 Header Text -->
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:text="Process Info"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Card 3 Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:id="@+id/txtInfo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:text="Information"/>

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card 4 -->
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_actionButton"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardElevation="10dp"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            card_view:cardCornerRadius="4dp">

            <!-- Card 4 Content -->
            <LinearLayout
                android:background="@color/cardbackground"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnApplyEffect"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Add Audio to Video"
                    android:backgroundTint="@color/menuItem_red"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>