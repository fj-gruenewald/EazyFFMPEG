<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_converter">

    <!-- Main Layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Activity Header -->
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view0"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardElevation="10dp"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            card_view:cardCornerRadius="8dp">

            <!-- Activity Header Layout -->
            <LinearLayout
                android:background="@drawable/menuitem_yellow"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_menu_convert"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Video Convert"
                        android:textColor="#FFF"
                        android:textSize="16sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 1 -->
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardElevation="10dp"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        card_view:cardCornerRadius="4dp">

        <!-- Card 1 Layout -->
        <LinearLayout
            android:background="@color/cardbackground"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Card 1 Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <!-- Card 1 Header Icon -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_input"/>

                <!-- Card 1 Header Text -->
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Input File"
                    android:textSize="16sp"/>

            </LinearLayout>

            <!-- Card 1 Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/txt_InputPath"
                    android:layout_width="250dp"
                    android:layout_gravity="center"
                    android:layout_height="50dp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/openFolderImageView"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_folder"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

        <!-- Card 2 -->
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardElevation="10dp"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            card_view:cardCornerRadius="4dp">

            <!-- Card 2 Layout -->
            <LinearLayout
                android:background="@color/cardbackground"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Card 2 Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <!-- Card 2 Header Icon -->
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_output"/>

                    <!-- Card 2 Header Text -->
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Output Name"
                        android:textSize="16sp"/>

                </LinearLayout>

                <!-- Card 2 Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txt_OutputPath"
                        android:layout_width="350dp"
                        android:layout_gravity="center"
                        android:layout_height="50dp"/>


                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 3 -->
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view3"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardElevation="10dp"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            card_view:cardCornerRadius="4dp">

            <!-- Card 3 Layout -->
            <LinearLayout
                android:background="@color/cardbackground"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Card 3 Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <!-- Card 3 Header Icon -->
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_codec"/>

                    <!-- Card 3 Header Text -->
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Codec"
                        android:textSize="16sp"/>

                </LinearLayout>

                <!-- Card 3 Header Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <Spinner
                        android:id="@+id/codec_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card 4 -->
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view4"
            android:background="@color/cardbackground"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardElevation="10dp"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            card_view:cardCornerRadius="4dp">

            <!-- Card 4 Content -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/bttn_convert"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Convert File"
                android:backgroundTint="@color/menuItem_yellow"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>